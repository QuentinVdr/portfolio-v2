{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@app/*": ["./src/app/*"],
      "@styles/*": ["./src/styles/*"]
    },
    "jsx": "preserve",
    "checkJs": true,
    "target": "ESNext",
    "moduleResolution": "node"
  },
  "exclude": ["node_modules", ".next", "out"]
}
